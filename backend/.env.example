# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100