# Node Environment
NODE_ENV=
PORT=

# Database (Postgres)
DATABASE_URL=postgresql://<dbname>:<dbpassword>@localhost:5432/trading_journal


# Redis
REDIS_URL=redis://localhost:6380

# JWT (must be 32 char)
JWT_SECRET=
JWT_REFRESH_SECRET=
JWT_EXPIRES_IN=30m
JWT_REFRESH_EXPIRES_IN=7d

# Email config
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# Admin
ADMIN_EMAIL=
SUPPORT_EMAIL=


# AWS (for future use)
# AWS_REGION=us-east-1
